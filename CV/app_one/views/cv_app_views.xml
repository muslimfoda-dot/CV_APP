<odoo>
    <record id="inventory_view_list" model="ir.ui.view">
        <field name="name">inventory list</field>
        <field name="model">app_one</field>
        <field name="arch" type="xml">
            <list multi_edit="0" create="1" edit="1" delete="1" class="header_inventory_list" decoration-danger="(is_late)">
                <field name="name" optional="1"/>
                <field name="code" optional="1"/>
            </list>
        </field>
    </record>


    <record id="inventory_view_form" model="ir.ui.view">
        <field name="name">inventory form</field>
        <field name="model">app_one</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <header>
                        <button name="action" type="object" class="btn-outline-dark " string="action"/>
                        <button name="action_write" type="object" class="btn-blue" string="تنفيذ الإجراء"/>

                        <button name="action_draft" type="object" class="btn-outline-dark " string="sed to draft"
                                invisible="state in ('draft','closed')"/>
                        <button name="action_pending" type="object" class="btn-close-white " string="sed to pending"
                                invisible="state != 'draft'"/>
                        <button name="action_sold" type="object" class="btn-danger " string="sed to sold"
                                invisible="state != 'pending'"/>
                        <field name="state" widget="statusbar"/>
                    </header>
                    <div class="oe_title">
                        <label for="ref"/>
                        <h1>
                            <field name="ref" readonly="1"/>
                        </h1>
                        <label for="name"/>
                        <h2>
                            <field name="name" readonly="state == 'closed'"/>
                        </h2>

                    </div>
                    <group string="general info">
                        <group>
                            <field name="player" readonly="state == 'closed'"/>
                            <field name="table" readonly="state == 'closed'"/>
                            <field name="price" readonly="state == 'closed'"/>
                            <field name="selling_price" readonly="state == 'closed'"/>
                            <field name="diff" readonly="state == 'closed'"/>
                            <field name="date_availability" required="1" readonly="state == 'closed'"/>
                            <field name="expected_selling_date" readonly="state == 'closed'"/>
                            <field name="is_late" readonly="state == 'closed'" />
                        </group>
                        <group string="general info">
                            <field name="tag" widget="many2many_tags"/>
                            <field name="code" readonly="state == 'closed'"/>
                            <field name="number" readonly="state == 'closed'"/>
                            <field name="owner" readonly="state == 'closed'"/>
                            <field name="address" readonly="state == 'closed'"/>
                            <field name="phone" readonly="state == 'closed'"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="New Page">
                            <field name="line_ids">
                                <list editable="bottom">
                                    <field name="description"/>
                                    <field name="code"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <chatter class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_follower"/>
                    <field name="message_ids" widget="mail_thread"/>
                    <field name="activity_ids" widget="mail_activity"/>
                </chatter>
            </form>

        </field>
    </record>


    <record id="inventory_view_search" model="ir.ui.view">
        <field name="name">inventory search</field>
        <field name="model">app_one</field>
        <field name="arch" type="xml">
            <search>
                <field name="code"/>
                <field name="name"/>
                <filter name="is_table" string="with table" domain="[('table','=','True')]"/>
                <filter name="group_table" string="table" context="{'group_by':'table'}"/>
            </search>
        </field>
    </record>

    <record id="server_action_app_one" model="ir.actions.server">
        <field name="name">closed</field>
        <field name="model_id" ref="model_app_one"/>
        <field name="binding_model_id" ref="model_app_one"/>
        <field name="state">code</field>
        <field name="code">
            action = records.action_closed()
        </field>
    </record>


    <record id="app_one_change_state_wizard_action" model="ir.actions.server">
        <field name="name">change state</field>
        <field name="model_id" ref="model_app_one"/>
        <field name="binding_model_id" ref="model_app_one"/>
        <field name="state">code</field>
        <field name="code">
            action = records.action_open_change_state_wizard()
        </field>
    </record>







    <record id="chek_selling_date_cron" model="ir.cron">
        <field name="name">AppOne: chek selling date</field>
        <field name="model_id" ref="model_app_one"/>
        <field name="state">code</field>
        <field name="code">model.check_expected_selling_date()</field>
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
        <field name="active">True</field>
    </record>



    <record id="inventory_action" model="ir.actions.act_window">
        <field name="name">inventory action</field>
        <field name="res_model">app_one</field>
    </record>

</odoo>
